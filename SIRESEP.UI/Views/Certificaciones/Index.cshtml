@model IEnumerable<SIRESEP.DATOS.tbCertificaciones>

@{
    ViewBag.Title = "Index";
}

<h2>Certificaciones</h2>

<p>
    @Html.ActionLink("Nueva Certificacion", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idCertificacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ano)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idCertificacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ano)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.idCertificacion }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.idCertificacion }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.idCertificacion }, new { onclick = "return confirm('Desea eliminar esta certificacion?');" })


        </td>
    </tr>
    }

</table>
